<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.runtime.remoting>
    <application>

      <!-- Define the remotable types. -->
      <service>
        <wellknown
            mode = "SingleCall"
            type = "Apress.VisualBasicRecipes.Chapter10.Recipe10_16, Recipe10-16"
            objectUri = "Recipe10-16.rem" />
      </service>

      <!-- Define the protocol used for network access. 
           You can use tcp or http channels. -->
      <channels>
        <channel ref="tcp" port="19080" />
      </channels>

    </application>
  </system.runtime.remoting>
</configuration>
